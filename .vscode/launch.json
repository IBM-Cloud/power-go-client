{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run a test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/test",
            "args": [
                "-test.v",
                "-test.run",
                "^${selectedText}$"
            ],
            "buildFlags": "-v -tags=all",
            "showLog": true,
            "envFile": "${workspaceFolder}/.vscode/.env"
        }
    ]
}